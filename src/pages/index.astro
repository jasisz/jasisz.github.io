---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const przemyslenia = (await getCollection('przemyslenia')).map(p => ({ ...p, topic: 'przemyślenia' }));
const kod = (await getCollection('kod')).map(p => ({ ...p, topic: 'kod' }));
const allPosts = [...przemyslenia, ...kod];

const recentPosts = [...allPosts]
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const paths = [
  { name: 'przemyślenia', slug: 'przemyslenia', count: przemyslenia.length },
  { name: 'kod', slug: 'kod', count: kod.length },
];
---

<BaseLayout title="jasisz">
  <div class="home">
    <header class="intro">
      <p class="intro-text">
        Zbiór zapisków o technologii, programowaniu i rzeczach, które mnie interesują.
        Możesz tu swobodnie błądzić między tematami.
      </p>
    </header>

    <section class="section">
      <h2 class="section-title">Ostatnie</h2>
      <div class="posts-list">
        {recentPosts.map((post) => (
          <a class="post-item" href={`/${post.slug}`}>
            <div class="post-meta">
              <span class="post-topic">{post.topic}</span>
              {post.data.lang === 'en' && <span class="post-lang">EN</span>}
              <time class="post-date">{post.data.date.toISOString().split('T')[0]}</time>
            </div>
            <h3 class="post-title">{post.data.title}</h3>
          </a>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Ścieżki</h2>
      <nav class="paths">
        {paths.map((path) => (
          <a class="path" href={`/${path.slug}`}>
            {path.name} <span class="path-count">({path.count})</span>
          </a>
        ))}
        <a class="path" href="/wszystko">
          wszystko <span class="path-count">({allPosts.length})</span>
        </a>
        <span class="path-sep">·</span>
        <a class="path path--random" href="/losowa">
          losowa →
        </a>
      </nav>
    </section>
  </div>
</BaseLayout>

<style>
  .home {
    padding: 2rem 0;
  }

  .intro {
    margin-bottom: 3rem;
  }

  .intro-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-color);
    max-width: 540px;
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--grey-color);
    text-transform: lowercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--grey-color-light);
  }

  /* Posts list */
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .post-item {
    text-decoration: none;
    color: inherit;
  }

  .post-item:hover .post-title {
    color: var(--brand-color);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.8rem;
    color: var(--grey-color);
    margin-bottom: 0.25rem;
  }

  .post-topic {
    text-transform: lowercase;
  }

  .post-lang {
    font-size: 0.7rem;
    padding: 0.1rem 0.4rem;
    background: var(--grey-color-light);
    border-radius: 3px;
  }

  .post-date {
    margin-left: auto;
  }

  .post-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1.15rem;
    font-weight: 400;
    margin: 0;
    transition: color 0.15s ease;
  }

  /* Paths */
  .paths {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem 1.25rem;
  }

  .path {
    font-size: 0.95rem;
    color: var(--text-color);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .path:hover {
    color: var(--brand-color);
    text-decoration: none;
  }

  .path-count {
    color: var(--grey-color);
  }

  .path-sep {
    color: var(--grey-color-light);
  }

  .path--random {
    color: var(--grey-color);
  }

  .path--random:hover {
    color: var(--brand-color);
  }
</style>
