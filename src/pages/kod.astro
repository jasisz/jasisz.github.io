---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('kod'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="kod">
  <div class="page">
    <header class="page-header">
      <h1 class="page-title">kod</h1>
      <p class="page-desc">Tutoriale i notatki techniczne</p>
    </header>

    <div class="posts-list">
      {posts.map((post) => (
        <a class="post-item" href={`/${post.slug}`}>
          <div class="post-meta">
            {post.data.lang === 'en' && <span class="post-lang">EN</span>}
            <time class="post-date">{post.data.date.toISOString().split('T')[0]}</time>
          </div>
          <h2 class="post-title">{post.data.title}</h2>
          {post.data.description && (
            <p class="post-desc">{post.data.description}</p>
          )}
        </a>
      ))}
    </div>

    <nav class="page-nav">
      <a class="nav-link" href="/">← wróć</a>
      <a class="nav-link" href="/przemyslenia">przemyślenia →</a>
    </nav>
  </div>
</BaseLayout>

<style>
  .page {
    padding: 2rem 0;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--grey-color-light);
  }

  .page-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0 0 0.25rem 0;
  }

  .page-desc {
    font-size: 0.9rem;
    color: var(--grey-color);
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .post-item {
    text-decoration: none;
    color: inherit;
  }

  .post-item:hover .post-title {
    color: var(--brand-color);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: var(--grey-color);
    margin-bottom: 0.25rem;
  }

  .post-lang {
    font-size: 0.7rem;
    padding: 0.1rem 0.4rem;
    background: var(--grey-color-light);
    border-radius: 3px;
  }

  .post-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1.15rem;
    font-weight: 400;
    margin: 0 0 0.25rem 0;
    transition: color 0.15s ease;
  }

  .post-desc {
    font-size: 0.9rem;
    color: var(--grey-color);
    margin: 0;
    line-height: 1.5;
  }

  .page-nav {
    display: flex;
    justify-content: space-between;
    padding-top: 1.5rem;
    border-top: 1px solid var(--grey-color-light);
  }

  .nav-link {
    font-size: 0.9rem;
    color: var(--grey-color);
    text-decoration: none;
  }

  .nav-link:hover {
    color: var(--brand-color);
  }
</style>
