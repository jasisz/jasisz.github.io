---
import { getCollection } from 'astro:content';
import BlogPost from '../layouts/BlogPost.astro';
import PostCard from '../components/PostCard.astro';

export async function getStaticPaths() {
  const przemyslenia = (await getCollection('przemyslenia')).map(post => ({ ...post, topic: 'przemyślenia' }));
  const kod = (await getCollection('kod')).map(post => ({ ...post, topic: 'kod' }));
  const recenzje = (await getCollection('recenzje')).map(post => ({ ...post, topic: 'recenzje' }));

  let tworczosc: any[] = [];
  try {
    tworczosc = (await getCollection('tworczosc')).map(post => ({ ...post, topic: 'twórczość' }));
  } catch (e) {}

  const allPosts = [...przemyslenia, ...kod, ...recenzje, ...tworczosc];

  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post, allPosts },
  }));
}

const { post, allPosts } = Astro.props;
const { Content } = await post.render();

// Find related posts (same topic, excluding current)
const relatedByTopic = allPosts
  .filter(p => p.slug !== post.slug && p.topic === post.topic)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 2);

// If not enough related by topic, add random others
const otherPosts = allPosts
  .filter(p => p.slug !== post.slug && !relatedByTopic.includes(p))
  .sort(() => Math.random() - 0.5)
  .slice(0, 2 - relatedByTopic.length);

const related = [...relatedByTopic, ...otherPosts];

const relatedTitle = post.data.lang === 'en' ? 'See also' : 'Zobacz też';
const work = post.data.work;
const isTworczosc = post.topic === 'twórczość';
---

<BlogPost
  title={post.data.title}
  date={post.data.date}
  lang={post.data.lang}
  status={post.data.status}
  topic={post.topic}
  author={isTworczosc ? "Szymon Teżewski" : undefined}
>
  {work && (
    <aside class="book-info">
      <div class="book-details">
        <span class="book-author">{work.creator}</span>
        <span class="book-title">{work.title}</span>
        {work.year && <span class="book-year">{work.year}</span>}
        {work.isbn && <span class="book-isbn">ISBN: {work.isbn}</span>}
      </div>
    </aside>
  )}

  <Content />

  {related.length > 0 && (
    <aside class="related">
      <h2 class="related-title">{relatedTitle}</h2>
      <div class="posts-grid">
        {related.map((p) => (
          <PostCard
            href={`/${p.slug}`}
            title={p.data.title}
            date={p.data.date}
            description={p.data.description}
            topic={p.topic}
            lang={p.data.lang}
            work={p.data.work}
          />
        ))}
      </div>
    </aside>
  )}
</BlogPost>

<style>
  .book-info {
    margin-bottom: 2rem;
    padding: 1rem 1.25rem;
    background: rgba(107, 124, 94, 0.06);
    border-radius: 6px;
    border-left: 3px solid var(--brand-color);
  }

  .book-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .book-author {
    font-size: 0.9rem;
    color: var(--grey-color);
  }

  .book-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1.1rem;
    font-style: italic;
    color: var(--text-color);
  }

  .book-year, .book-isbn {
    font-size: 0.8rem;
    color: var(--grey-color);
  }

  .related {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--grey-color-light);
  }

  .related-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--grey-color);
    text-transform: lowercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.25rem;
  }
</style>
