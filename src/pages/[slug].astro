---
import { getCollection } from 'astro:content';
import BlogPost from '../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const przemyslenia = (await getCollection('przemyslenia')).map(post => ({ ...post, topic: 'przemyślenia' }));
  const kod = (await getCollection('kod')).map(post => ({ ...post, topic: 'kod' }));
  const allPosts = [...przemyslenia, ...kod];

  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post, allPosts },
  }));
}

const { post, allPosts } = Astro.props;
const { Content } = await post.render();

// Find related posts (same topic, excluding current)
const relatedByTopic = allPosts
  .filter(p => p.slug !== post.slug && p.topic === post.topic)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 2);

// If not enough related by topic, add random others
const otherPosts = allPosts
  .filter(p => p.slug !== post.slug && !relatedByTopic.includes(p))
  .sort(() => Math.random() - 0.5)
  .slice(0, 2 - relatedByTopic.length);

const related = [...relatedByTopic, ...otherPosts];

const relatedTitle = post.data.lang === 'en' ? 'See also' : 'Zobacz też';
---

<BlogPost
  title={post.data.title}
  date={post.data.date}
  lang={post.data.lang}
  status={post.data.status}
  topic={post.topic}
>
  <Content />

  {related.length > 0 && (
    <aside class="related">
      <h2 class="related-title">{relatedTitle}</h2>
      <ul class="related-list">
        {related.map((p) => (
          <li>
            <a class="related-link" href={`/${p.slug}`}>
              <span class="related-name">{p.data.title}</span>
              {p.data.lang === 'en' && <span class="related-lang">EN</span>}
              <span class="related-topic">{p.topic}</span>
            </a>
          </li>
        ))}
      </ul>
    </aside>
  )}
</BlogPost>

<style>
  .related {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--grey-color-light);
  }

  .related-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--grey-color);
    text-transform: lowercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .related-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .related-link {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    text-decoration: none;
    color: inherit;
  }

  .related-link:hover .related-name {
    color: var(--brand-color);
  }

  .related-name {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1rem;
    color: var(--text-color);
    transition: color 0.15s ease;
  }

  .related-lang {
    font-size: 0.7rem;
    padding: 0.1rem 0.4rem;
    background: var(--grey-color-light);
    border-radius: 3px;
    color: var(--grey-color);
  }

  .related-topic {
    font-size: 0.8rem;
    color: var(--grey-color);
    margin-left: auto;
  }
</style>
