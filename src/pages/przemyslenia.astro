---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('przemyslenia'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="przemyślenia">
  <div class="page">
    <header class="page-header">
      <h1 class="page-title">przemyślenia</h1>
      <p class="page-desc">O technologii, społeczeństwie i internecie</p>
    </header>

    <div class="posts-grid">
      {posts.map((post) => (
        <PostCard
          href={`/${post.slug}`}
          title={post.data.title}
          date={post.data.date}
          description={post.data.description}
          lang={post.data.lang}
        />
      ))}
    </div>

    <nav class="page-nav">
      <a class="nav-link" href="/">← wróć</a>
      <a class="nav-link" href="/kod">kod →</a>
    </nav>
  </div>
</BaseLayout>
