---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const przemyslenia = (await getCollection('przemyslenia')).map(p => ({ ...p, topic: 'przemyślenia' }));
const kod = (await getCollection('kod')).map(p => ({ ...p, topic: 'kod' }));

const posts = [...przemyslenia, ...kod].sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="wszystko">
  <div class="page">
    <header class="page-header">
      <h1 class="page-title">wszystko</h1>
      <p class="page-desc">{posts.length} zapisków</p>
    </header>

    <div class="posts-list">
      {posts.map((post) => (
        <a class="post-item" href={`/${post.slug}`}>
          <time class="post-date">{post.data.date.toISOString().split('T')[0]}</time>
          <span class="post-title">{post.data.title}</span>
          {post.data.lang === 'en' && <span class="post-lang">EN</span>}
          <span class="post-topic">{post.topic}</span>
        </a>
      ))}
    </div>

    <a class="back-link" href="/">← wróć</a>
  </div>
</BaseLayout>

<style>
  .page {
    padding: 2rem 0;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--grey-color-light);
  }

  .page-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0 0 0.25rem 0;
  }

  .page-desc {
    font-size: 0.9rem;
    color: var(--grey-color);
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2.5rem;
  }

  .post-item {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    text-decoration: none;
    color: inherit;
  }

  .post-item:hover .post-title {
    color: var(--brand-color);
  }

  .post-date {
    font-size: 0.8rem;
    color: var(--grey-color);
    font-family: -apple-system, BlinkMacSystemFont, monospace;
    flex-shrink: 0;
  }

  .post-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1rem;
    transition: color 0.15s ease;
  }

  .post-lang {
    font-size: 0.65rem;
    padding: 0.1rem 0.35rem;
    background: var(--grey-color-light);
    border-radius: 3px;
    color: var(--grey-color);
  }

  .post-topic {
    font-size: 0.8rem;
    color: var(--grey-color);
    margin-left: auto;
  }

  .back-link {
    display: inline-block;
    font-size: 0.9rem;
    color: var(--grey-color);
    text-decoration: none;
    padding-top: 1.5rem;
    border-top: 1px solid var(--grey-color-light);
  }

  .back-link:hover {
    color: var(--brand-color);
  }

  @media (max-width: 600px) {
    .post-item {
      flex-wrap: wrap;
      gap: 0.25rem 0.5rem;
    }

    .post-date {
      width: 100%;
    }

    .post-topic {
      margin-left: 0;
    }
  }
</style>
