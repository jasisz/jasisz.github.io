{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Aver",
  "scopeName": "source.aver",
  "patterns": [
    { "include": "#comment" },
    { "include": "#description" },
    { "include": "#effects" },
    { "include": "#string" },
    { "include": "#number" },
    { "include": "#keyword" },
    { "include": "#adr-key" },
    { "include": "#fn-def" },
    { "include": "#builtin-namespace" },
    { "include": "#builtin-type" },
    { "include": "#builtin-value" },
    { "include": "#constructor" },
    { "include": "#operator" }
  ],
  "repository": {

    "comment": {
      "name": "comment.line.double-slash.aver",
      "match": "//.*$"
    },

    "description": {
      "comment": "? \"prose description\" attached to a function",
      "name": "comment.block.documentation.aver",
      "match": "^\\s*(\\?)\\s*(\"[^\"]*\")",
      "captures": {
        "1": { "name": "punctuation.definition.comment.aver" },
        "2": { "name": "comment.block.documentation.aver" }
      }
    },

    "effects": {
      "comment": "! [Console, Http, Disk] effect declaration",
      "match": "(!)\\s*(\\[)([^\\]]*)(\\])",
      "captures": {
        "1": { "name": "keyword.operator.effect.aver" },
        "2": { "name": "punctuation.section.brackets.aver" },
        "3": { "name": "entity.name.type.effect.aver" },
        "4": { "name": "punctuation.section.brackets.aver" }
      }
    },

    "string": {
      "comment": "String literal with interpolation",
      "name": "string.quoted.double.aver",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "comment": "Escaped braces: {{ and }} produce literal { and }",
          "name": "constant.character.escape.aver",
          "match": "\\{\\{|\\}\\}"
        },
        {
          "name": "meta.embedded.expression.aver",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": { "0": { "name": "punctuation.section.interpolation.begin.aver" } },
          "endCaptures":   { "0": { "name": "punctuation.section.interpolation.end.aver" } },
          "patterns": [{ "include": "$self" }]
        },
        {
          "name": "constant.character.escape.aver",
          "match": "\\\\."
        }
      ]
    },

    "number": {
      "patterns": [
        {
          "comment": "Float with decimal and optional exponent: 1.5, 1.5e10, 1.5e-3",
          "name": "constant.numeric.float.aver",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "comment": "Integer with exponent (still a float): 1e2, 2E+10",
          "name": "constant.numeric.float.aver",
          "match": "\\b[0-9]+[eE][+-]?[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.aver",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },

    "keyword": {
      "patterns": [
        {
          "comment": "Definition keywords (val/var produce parse errors but are reserved)",
          "name": "keyword.declaration.aver",
          "match": "\\b(fn|val|var|type|record|module|effects)\\b"
        },
        {
          "comment": "Block keywords",
          "name": "keyword.control.aver",
          "match": "\\b(match|verify|decision|depends|exposes)\\b"
        },
        {
          "comment": "Module and decision metadata keys",
          "name": "keyword.other.aver",
          "match": "\\b(intent|reason|date|chosen|rejected|impacts|author|needs)\\b"
        }
      ]
    },

    "adr-key": {
      "comment": "decision block field names followed by colon",
      "match": "^\\s*(date|reason|chosen|rejected|impacts|author|intent|needs)(:)",
      "captures": {
        "1": { "name": "keyword.other.adr.aver" },
        "2": { "name": "punctuation.separator.key-value.aver" }
      }
    },

    "fn-def": {
      "comment": "fn name( â€” highlight function name",
      "match": "^\\s*(fn)\\s+([a-z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.declaration.function.aver" },
        "2": { "name": "entity.name.function.aver" }
      }
    },

    "builtin-namespace": {
      "comment": "Namespace.method calls: Console.print, String.len, Char.toCode, etc.",
      "match": "\\b(Console|Http|HttpServer|Disk|Tcp|Int|Float|String|List|Map|Char|Byte|Result|Option)(\\.)(\\w+)?",
      "captures": {
        "1": { "name": "support.class.namespace.aver" },
        "2": { "name": "punctuation.accessor.aver" },
        "3": { "name": "support.function.namespace.aver" }
      }
    },

    "builtin-type": {
      "name": "support.type.aver",
      "match": "\\b(Int|Float|String|Bool|Unit|Result|Option|List|Map|Fn|HttpResponse|HttpRequest|Header)\\b"
    },

    "builtin-value": {
      "name": "constant.language.aver",
      "match": "\\b(true|false)\\b"
    },

    "constructor": {
      "comment": "Qualified constructors: Result.Ok, Option.Some, Option.None",
      "match": "\\b([A-Z][a-zA-Z0-9]*)(\\.)?([A-Z][a-zA-Z0-9]*)?",
      "captures": {
        "1": { "name": "entity.name.type.aver" },
        "2": { "name": "punctuation.accessor.aver" },
        "3": { "name": "entity.name.type.variant.aver" }
      }
    },

    "operator": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.aver",
          "match": "->|=>|\\|>"
        },
        {
          "name": "keyword.operator.comparison.aver",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.aver",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.error-propagation.aver",
          "match": "\\?"
        }
      ]
    }
  }
}
