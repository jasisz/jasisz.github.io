---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: Date;
  lang?: string;
  status?: 'seed' | 'growing' | 'evergreen';
  topic?: string;
  author?: string;
}

const { title, date, lang = 'pl', status = 'evergreen', topic, author } = Astro.props;
const formattedDate = date.toISOString().split('T')[0];

const statusLabels = {
  pl: { seed: 'szkic', growing: 'w trakcie', evergreen: '' },
  en: { seed: 'draft', growing: 'in progress', evergreen: '' },
};

const labels = statusLabels[lang as keyof typeof statusLabels] || statusLabels.pl;
const statusLabel = labels[status];
const backLabel = lang === 'en' ? '← back' : '← wróć';
---

<BaseLayout title={title} lang={lang}>
  <article class="post" lang={lang}>
    <header class="post-header">
      <div class="post-meta">
        {topic && (
          <a class="post-topic" href={`/${topic.replace('ś', 's').replace('ę', 'e')}`}>{topic}</a>
        )}
        {topic && <span class="meta-sep">·</span>}
        <time class="post-date" datetime={date.toISOString()}>{formattedDate}</time>
        {statusLabel && <span class="post-status">{statusLabel}</span>}
        {lang === 'en' && <span class="post-lang">EN</span>}
      </div>

      <h1 class="post-title">{title}</h1>
      {author && <p class="post-author">{author}</p>}
    </header>

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <a href="/" class="back-link">{backLabel}</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post {
    padding: 1rem 0;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--grey-color);
    margin-bottom: 0.75rem;
  }

  .post-topic {
    color: var(--grey-color);
    text-decoration: none;
  }

  .post-topic:hover {
    color: var(--brand-color);
  }

  .meta-sep {
    color: var(--grey-color-light);
  }

  .post-date {
    font-family: -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .post-status {
    font-size: 0.75rem;
    padding: 0.15rem 0.5rem;
    background: var(--grey-color-light);
    border-radius: 3px;
    color: var(--grey-color);
  }

  .post-lang {
    font-size: 0.7rem;
    padding: 0.1rem 0.4rem;
    background: var(--grey-color-light);
    border-radius: 3px;
  }

  .post-title {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 2rem;
    font-weight: 400;
    line-height: 1.25;
    margin: 0;
    color: var(--text-color);
  }

  .post-author {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 1.1rem;
    font-style: italic;
    color: var(--grey-color);
    margin: 0.5rem 0 0 0;
  }

  .post-content {
    margin-bottom: 3rem;
  }

  .post-footer {
    padding-top: 1.5rem;
    border-top: 1px solid var(--grey-color-light);
  }

  .back-link {
    font-size: 0.9rem;
    color: var(--grey-color);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--brand-color);
  }

  @media screen and (max-width: 600px) {
    .post-title {
      font-size: 1.65rem;
    }
  }
</style>
