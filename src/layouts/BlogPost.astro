---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: Date;
  lang?: string;
  status?: 'seed' | 'growing' | 'evergreen';
  topic?: string;
  author?: string;
}

const { title, date, lang = 'pl', status = 'evergreen', topic, author } = Astro.props;
const formattedDate = date.toISOString().split('T')[0];

const statusLabels = {
  pl: { seed: 'szkic', growing: 'w trakcie', evergreen: '' },
  en: { seed: 'draft', growing: 'in progress', evergreen: '' },
};

const labels = statusLabels[lang as keyof typeof statusLabels] || statusLabels.pl;
const statusLabel = labels[status];
const backLabel = lang === 'en' ? '← back' : '← wróć';
---

<BaseLayout title={title} lang={lang}>
  <div class="reading-progress" id="reading-progress"></div>
  <article class="post" lang={lang}>
    <header class="post-header">
      <div class="post-meta">
        {topic && (
          <a class="post-topic" href={`/${topic.replace('ś', 's').replace('ę', 'e')}`}>{topic}</a>
        )}
        {topic && <span class="meta-sep">·</span>}
        <time class="post-date" datetime={date.toISOString()}>{formattedDate}</time>
        {statusLabel && <span class="post-status">{statusLabel}</span>}
        {lang === 'en' && <span class="post-lang">EN</span>}
      </div>

      <h1 class="post-title">{title}</h1>
      {author && <p class="post-author">{author}</p>}
    </header>

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <a href="/" class="back-link">{backLabel}</a>
    </footer>
  </article>
</BaseLayout>

<script>
  const progressBar = document.getElementById('reading-progress');

  function updateProgress() {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const progress = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
    if (progressBar) {
      progressBar.style.width = `${progress}%`;
    }
  }

  window.addEventListener('scroll', updateProgress, { passive: true });
  updateProgress();
</script>

<style>
  .reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    height: 3px;
    width: 0%;
    background: linear-gradient(90deg, var(--brand-color), var(--brand-color-dark));
    z-index: 1000;
    transition: width 0.1s ease-out;
  }

  .post {
    padding: 1rem 0;
  }

  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    position: relative;
  }

  .post-header::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      to right,
      var(--grey-color-light) 0%,
      var(--grey-color-light) 42%,
      transparent 42%,
      transparent 58%,
      var(--grey-color-light) 58%,
      var(--grey-color-light) 100%
    );
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--grey-color);
    margin-bottom: 1rem;
  }

  .post-topic {
    color: var(--grey-color);
    text-decoration: none;
  }

  .post-topic:hover {
    color: var(--brand-color);
  }

  .meta-sep {
    color: var(--grey-color-light);
  }

  .post-date {
    font-family: -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .post-status {
    font-size: 0.75rem;
    padding: 0.15rem 0.5rem;
    background: var(--grey-color-light);
    border-radius: 3px;
    color: var(--grey-color);
  }

  .post-lang {
    font-size: 0.7rem;
    padding: 0.1rem 0.4rem;
    background: var(--grey-color-light);
    border-radius: 3px;
  }

  .post-title {
    font-family: var(--heading-font-family);
    font-size: 2.2rem;
    font-weight: 400;
    line-height: 1.25;
    margin: 0;
    color: var(--text-color);
    text-align: center;
  }

  .post-header::after {
    content: "❧";
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    color: var(--brand-color);
    font-size: 1.1rem;
  }

  .post-author {
    font-family: var(--heading-font-family);
    font-size: 1rem;
    font-style: italic;
    color: var(--grey-color);
    margin: 0.75rem 0 0 0;
    text-align: center;
  }

  .post-content {
    margin-bottom: 3rem;
  }

  .post-footer {
    padding-top: 1.5rem;
    border-top: 1px solid var(--grey-color-light);
  }

  .back-link {
    font-size: 0.9rem;
    color: var(--grey-color);
    text-decoration: none;
    transition: all 0.15s ease;
    padding: 0.35rem 0.75rem;
    border-radius: 3px;
  }

  .back-link:hover {
    color: var(--brand-color);
    background: rgba(139, 64, 73, 0.08);
  }

  @media screen and (max-width: 600px) {
    .post-title {
      font-size: 1.65rem;
    }
  }
</style>
