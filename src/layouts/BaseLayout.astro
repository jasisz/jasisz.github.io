---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { title, description = "Zapiski o technologii, programowaniu i rzeczach, które mnie interesują.", lang = "pl" } = Astro.props;
const siteTitle = "jasisz";
const pageTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={Astro.url} />
    <link rel="alternate" type="application/rss+xml" title={siteTitle} href="/rss.xml" />
  </head>
  <body>
    <header class="site-header">
      <div class="wrapper header-wrapper">
        <a class="site-title" href="/">{siteTitle}</a>
        <nav class="site-nav">
          <a href="/przemyslenia">przemyślenia</a>
          <a href="/kod">kod</a>
          <a href="/literatura">literatura</a>
          <a href="/wszystko">wszystko</a>
        </nav>
      </div>
    </header>

    <div class="page-content">
      <div class="wrapper">
        <slot />
      </div>
    </div>

    <footer class="site-footer">
      <div class="wrapper footer-wrapper">
        <div class="footer-main">
          <p class="footer-desc">Szymon Teżewski (jasisz)<br/>Zapiski o programowaniu, literaturze i innych.<br/>Bez śledzenia, bez ciasteczek.</p>
        </div>
        <div class="footer-links">
          <a href="mailto:jasisz@gmail.com">email</a>
          <a href="/rss.xml">rss</a>
          <a href="https://github.com/jasisz">github</a>
        </div>
      </div>
    </footer>
  </body>
</html>
